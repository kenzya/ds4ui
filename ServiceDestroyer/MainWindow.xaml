<Window x:Class="ServiceDestroyer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Destroyer" Height="100" Width="200" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Click="Button_Click">
            <TextBlock Text="Remove Service" TextWrapping="Wrap"/>
        </Button>
        <Button Grid.Column="1" Click="Button_Click_1">
            <TextBlock Text="Delete Configuration" TextWrapping="Wrap"/>
        </Button>
    </Grid>
</Window>
